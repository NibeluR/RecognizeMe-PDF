    <script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
    <model-viewer id="modelviewer" src="/models/magic-room-compressed.glb" poster="/scene-poster.webp" ar ar-modes="webxr scene-viewer quick-look" auto-rotate rotation-per-second="2%" shadow-intensity="1" shadow-softness="1" camera-orbit="60deg 70deg auto" camera-target="-250m -100m -200m"> </model-viewer> 


<script>
        (() => {
        const modelViewer = document.querySelector('#modelviewer');
        const orbitCycle = [
            '60deg 70deg auto',
            '55deg 70deg auto',
            '54deg 60deg auto',
            modelViewer.cameraOrbit
        ];
        
        setInterval(() => {
            const currentOrbitIndex = orbitCycle.indexOf(modelViewer.cameraOrbit);
            modelViewer.cameraOrbit =
                orbitCycle[(currentOrbitIndex + 2) % orbitCycle.length];
        }, 10000);
        })();
        </script>

    <div class="backgroundwindow"><img src="/background-window.webp"></div>


